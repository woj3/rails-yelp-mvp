<div class="container">

 <h1 class="py-5">Restaurants in Berlin</h1>
  <table class="table">

    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Cuisine</th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
      <tr>
        <td> <%= link_to restaurant.name, restaurant %> </td>
        <td> <%= restaurant.address %> </td>
        <td> <%= restaurant.category %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Create a new Restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
